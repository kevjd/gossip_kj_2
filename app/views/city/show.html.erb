<div class="container-fluid position-absolute mt-4">
  <h3 class="text-center font-weight-bold">City informations</h3>
  <div class="row d-flex justify-content-center">
    <div class="col-xs">
      <div class="card shadow-sm alert alert-success">
        <div class="card-body text-dark">
          <h5 class="card-title text-center font-weight-bold">Nom : <%= @city.name %> 
          <h6 class="card-text text-center">Code postal : <%= @city.zip_code%> </h6>
          <p class="card-text text-center"> <%= link_to "Revenir à la liste des potins", root_path %> </p>
        </div>
      </div>
    </div>
  </div>
  <h3>Voici tous les potins pour la ville <%= @city.name %></h3>

<div class="row">
  <% @gossips_city.each do |gossip| %>
    <div class="col-sm-6" style="padding: 30px">
      <div class="card">
        <div class="card-header">
          <h4><%= gossip.title %></h4>
        </div>
        <div class="card-body">
          <h5 class="card-title">A été écrit par <%= gossip.user.first_name %></h5>
          <%= link_to "En savoir plus...", gossip_path(gossip.id), class:"btn btn-primary" %>
          <% if gossip.likes.where(user_id: current_user).count > 0 %>
            <%= link_to "Dislike", like_path(:id => gossip.likes.sample), method: :delete, class:"btn btn-danger" %>
          <% else %>
            <%= link_to "liker", like_index_path(:id => gossip.id), method: :post, class:"btn btn-danger" %>
          <% end %>
          <%= gossip.likes.count %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
